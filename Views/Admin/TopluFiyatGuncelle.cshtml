@model IEnumerable<KitapSatisSitesi.Models.Kitap>
@{
    ViewData["Title"] = "Toplu Fiyat Güncelleme";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-dollar-sign me-2"></i>Toplu Fiyat Güncelleme
                </h2>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Admin Paneli
                </a>
            </div>

            @if (TempData["Mesaj"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Mesaj"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Hata"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-money-bill-wave me-2"></i>Toplam @Model.Count() Kitap
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="TopluFiyatGuncelle" method="post" id="fiyatForm">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="fiyatTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Kitap Adı</th>
                                        <th>Yazar</th>
                                        <th>Kategori</th>
                                        <th>Mevcut Fiyat</th>
                                        <th>Yeni Fiyat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kitap in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(kitap.ResimUrl))
                                                    {
                                                        <img src="@kitap.ResimUrl" alt="@kitap.Ad" 
                                                             class="img-thumbnail me-2" style="width: 40px; height: 50px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <strong>@kitap.Ad</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@(kitap.Yazar?.TamAd ?? "Bilinmiyor")</td>
                                            <td>
                                                <span class="badge bg-info">@(kitap.Kategori?.Ad ?? "Bilinmiyor")</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary fs-6">₺@kitap.Fiyat.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <input type="number" 
                                                       name="fiyatlar[@kitap.KitapID]" 
                                                       value="@kitap.Fiyat" 
                                                       class="form-control form-control-sm" 
                                                       step="0.01" 
                                                       min="0" 
                                                       style="width: 100px;">
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <div>
                                <button type="button" class="btn btn-warning me-2" onclick="yuzdeArtir(10)">
                                    <i class="fas fa-plus me-2"></i>%10 Artır
                                </button>
                                <button type="button" class="btn btn-warning me-2" onclick="yuzdeArtir(20)">
                                    <i class="fas fa-plus me-2"></i>%20 Artır
                                </button>
                                <button type="button" class="btn btn-info me-2" onclick="yuzdeAzalt(10)">
                                    <i class="fas fa-minus me-2"></i>%10 Azalt
                                </button>
                                <button type="button" class="btn btn-info me-2" onclick="yuzdeAzalt(20)">
                                    <i class="fas fa-minus me-2"></i>%20 Azalt
                                </button>
                            </div>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Fiyatları Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function yuzdeArtir(yuzde) {
    var inputs = document.querySelectorAll('input[name^="fiyatlar["]');
    inputs.forEach(function(input) {
        var mevcutFiyat = parseFloat(input.value);
        var yeniFiyat = mevcutFiyat * (1 + yuzde / 100);
        input.value = yeniFiyat.toFixed(2);
    });
}

function yuzdeAzalt(yuzde) {
    var inputs = document.querySelectorAll('input[name^="fiyatlar["]');
    inputs.forEach(function(input) {
        var mevcutFiyat = parseFloat(input.value);
        var yeniFiyat = mevcutFiyat * (1 - yuzde / 100);
        input.value = yeniFiyat.toFixed(2);
    });
}

// DataTable özelliği ekle
$(document).ready(function() {
    $('#fiyatTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
        },
        "pageLength": 25,
        "order": [[0, "asc"]]
    });
});
</script>

<style>
.table th {
    background-color: #4e73df !important;
    color: white !important;
    border-color: #4e73df !important;
}
.img-thumbnail {
    border: 1px solid #dee2e6;
}
</style> 