@model KitapSatisSitesi.Models.Kitap
@{
    ViewData["Title"] = "Kitap Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Yeni Kitap Ekle
                    </h4>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }
                    <form asp-action="KitapEkle" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label">Kitap Adı</label>
                                <input asp-for="Ad" class="form-control" required>
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="YayinYili" class="form-label">Yayın Yılı</label>
                                <input asp-for="YayinYili" class="form-control" type="number" min="1900" max="@DateTime.Now.Year" required>
                                <span asp-validation-for="YayinYili" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Yazar</label>
                                <div class="input-group">
                                    <input type="text" id="yazarAd" name="yazarAd" class="form-control" placeholder="Yazar Adı" required>
                                    <input type="text" id="yazarSoyad" name="yazarSoyad" class="form-control" placeholder="Yazar Soyadı" required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="KategoriID" class="form-label">Kategori</label>
                                <select asp-for="KategoriID" class="form-select" required>
                                    <option value="">Kategori Seçin</option>
                                    @if (ViewBag.Kategoriler != null)
                                    {
                                        @foreach (var kategori in ViewBag.Kategoriler)
                                        {
                                            <option value="@kategori.KategoriID">@kategori.Ad</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="KategoriID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Fiyat" class="form-label">Fiyat (₺)</label>
                                <input asp-for="Fiyat" class="form-control" type="number" step="0.01" min="0" required>
                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="StokAdedi" class="form-label">Stok Adedi</label>
                                <input asp-for="StokAdedi" class="form-control" type="number" min="0" required>
                                <span asp-validation-for="StokAdedi" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kitap Görseli</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Resim Dosyası Yükle</label>
                                    <input type="file" id="resimDosyasi" name="resimDosyasi" class="form-control" accept="image/*">
                                    <small class="text-muted">JPG, PNG, JPEG dosyaları (Max: 2MB)</small>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ResimUrl" class="form-label">Veya Resim URL</label>
                                    <input asp-for="ResimUrl" class="form-control" placeholder="/kitapresimleri/kitap-adi.jpg">
                                    <small class="text-muted">Lokal dosya yolu veya internet URL'si</small>
                                </div>
                            </div>
                            <span asp-validation-for="ResimUrl" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Kitap Ekle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Dosya yükleme işlemi
    $('#resimDosyasi').on('change', function() {
        var file = this.files[0];
        if (file) {
            // Dosya boyutu kontrolü (2MB)
            if (file.size > 2 * 1024 * 1024) {
                alert('Dosya boyutu 2MB\'dan küçük olmalıdır!');
                this.value = '';
                return;
            }
            
            // Dosya tipi kontrolü
            if (!file.type.match('image.*')) {
                alert('Lütfen sadece resim dosyası seçin!');
                this.value = '';
                return;
            }
            
            // Kitap adını al
            var kitapAdi = $('#Ad').val();
            if (!kitapAdi) {
                alert('Önce kitap adını girin!');
                this.value = '';
                return;
            }
            
            // Dosya uzantısını al
            var uzanti = file.name.split('.').pop().toLowerCase();
            
            // Resim URL'sini otomatik doldur
            var resimUrl = '/kitapresimleri/' + kitapAdi.replace(/[^a-zA-Z0-9ğüşıöçĞÜŞİÖÇ\s]/g, '') + '.' + uzanti;
            $('#ResimUrl').val(resimUrl);
            
            // Kullanıcıya bilgi ver
            alert('Resim dosyası seçildi! URL otomatik olarak dolduruldu: ' + resimUrl);
        }
    });
    
    // Kitap adı değiştiğinde resim URL'sini güncelle
    $('#Ad').on('input', function() {
        var kitapAdi = $(this).val();
        var resimUrl = $('#ResimUrl').val();
        
        if (resimUrl && resimUrl.startsWith('/kitapresimleri/')) {
            var uzanti = resimUrl.split('.').pop();
            var yeniUrl = '/kitapresimleri/' + kitapAdi.replace(/[^a-zA-Z0-9ğüşıöçĞÜŞİÖÇ\s]/g, '') + '.' + uzanti;
            $('#ResimUrl').val(yeniUrl);
        }
    });
});
</script> 