@model IEnumerable<KitapSatisSitesi.Models.Kategori>
@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-tags me-2"></i>Kategori Yönetimi
                </h2>
                <div>
                    <a href="@Url.Action("KategoriEkle")" class="btn btn-primary me-2">
                        <i class="fas fa-plus me-2"></i>Yeni Kategori Ekle
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Admin Paneli
                    </a>
                </div>
            </div>

            @if (TempData["Mesaj"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Mesaj"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Hata"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-tag me-2"></i>Toplam @Model.Count() Kategori
                    </h6>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz kategori bulunmuyor</h5>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="kategoriTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Kategori Adı</th>
                                        <th>Kitap Sayısı</th>
                                        <th>Toplam Değer</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kategori in Model)
                                    {
                                        var kitapSayisi = kategori.Kitaplar?.Count ?? 0;
                                        var toplamDeger = kategori.Kitaplar?.Sum(k => k.Fiyat) ?? 0;
                                        
                                        <tr>
                                            <td>@kategori.KategoriID</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 40px; height: 40px;">
                                                        <i class="fas fa-tag"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@kategori.Ad</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info fs-6">@kitapSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success fs-6">₺@toplamDeger.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("KategoriDuzenle", new { id = kategori.KategoriID })" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (kitapSayisi == 0)
                                                    {
                                                        <button type="button" 
                                                                class="btn btn-sm btn-outline-danger" 
                                                                title="Sil"
                                                                onclick="kategoriSil(@kategori.KategoriID, '@kategori.Ad')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" 
                                                                class="btn btn-sm btn-outline-secondary" 
                                                                title="Kitap var, silinemez"
                                                                disabled>
                                                            <i class="fas fa-lock"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Silme Onay Modalı -->
<div class="modal fade" id="silModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>Kategori Silme Onayı
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="silinecekKategoriAdi"></strong> kategorisini silmek istediğinizden emin misiniz?</p>
                <p class="text-danger"><small>Bu işlem geri alınamaz!</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>İptal
                </button>
                <form id="silForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function kategoriSil(kategoriId, kategoriAdi) {
    document.getElementById('silinecekKategoriAdi').textContent = kategoriAdi;
    document.getElementById('silForm').action = '@Url.Action("KategoriSil")/' + kategoriId;
    
    var modal = new bootstrap.Modal(document.getElementById('silModal'));
    modal.show();
}

// DataTable özelliği ekle
$(document).ready(function() {
    $('#kategoriTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
        },
        "pageLength": 25,
        "order": [[0, "asc"]]
    });
});
</script>

<style>
.table th {
    background-color: #4e73df !important;
    color: white !important;
    border-color: #4e73df !important;
}
.rounded-circle {
    border-radius: 50% !important;
}
</style> 