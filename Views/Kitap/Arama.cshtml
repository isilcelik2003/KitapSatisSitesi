@model IEnumerable<KitapSatisSitesi.Models.Kitap>
@{
    ViewData["Title"] = "Arama Sonuçları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Arama Sonuçları</h1>
            
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Kitaplar</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Arama: "@ViewBag.AramaTerimi"</li>
                </ol>
            </nav>

            <div class="mb-4">
                <p class="text-muted">
                    <i class="fas fa-search me-2"></i>
                    "<strong>@ViewBag.AramaTerimi</strong>" için @Model.Count() sonuç bulundu.
                </p>
            </div>

            <!-- Kategori Filtreleri -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Index")" class="btn btn-outline-primary">Tümü</a>
                        @if (ViewBag.Kategoriler != null)
                        {
                            @foreach (var kategori in ViewBag.Kategoriler)
                            {
                                <a href="@Url.Action("Kategori", "Kitap", new { kategori = kategori.Ad })" class="btn btn-outline-primary">@kategori.Ad</a>
                            }
                        }
                    </div>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    "<strong>@ViewBag.AramaTerimi</strong>" için sonuç bulunamadı. Farklı anahtar kelimeler deneyebilirsiniz.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var kitap in Model)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100" data-kitap-id="@kitap.KitapID" data-fiyat="@kitap.Fiyat" data-yazar-adi="@kitap.Yazar.TamAd" data-resim-url="@kitap.ResimUrl">
                                <img src="@(string.IsNullOrEmpty(kitap.ResimUrl) ? "https://via.placeholder.com/200x300/6c757d/ffffff?text=Kitap" : 
                                        (kitap.ResimUrl.StartsWith("http://") || kitap.ResimUrl.StartsWith("https://") ? kitap.ResimUrl : (kitap.ResimUrl.StartsWith("/") ? kitap.ResimUrl : "/" + kitap.ResimUrl)))" 
                                     class="card-img-top" alt="@kitap.Ad">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title">@kitap.Ad</h6>
                                    <p class="card-text text-muted">@kitap.Yazar.TamAd</p>
                                    <p class="card-text">
                                        <span class="badge bg-secondary">@kitap.Kategori.Ad</span>
                                        @if (!kitap.StoktaMi)
                                        {
                                            <span class="badge bg-danger">Stokta Yok</span>
                                        }
                                    </p>
                                    <p class="card-text mt-auto">
                                        <strong class="text-primary">₺@kitap.Fiyat.ToString("F2")</strong>
                                    </p>
                                    <div class="mt-auto">
                                        <a href="@Url.Action("Detay", new { id = kitap.KitapID })" class="btn btn-outline-primary btn-sm w-100 mb-2">
                                            Detayları Gör
                                        </a>
                                        @if (kitap.StoktaMi)
                                        {
                                            <button class="btn btn-primary btn-sm w-100" onclick="sepeteEkle(@kitap.KitapID, '@kitap.Ad')">Sepete Ekle</button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-sm w-100" disabled>Stokta Yok</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div> 